{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PMS;User Id=sa;Password=YourPassword;TrustServerCertificate=true;"
  },
  "DbPerformanceOptimizer": {
    "SnapshotBasePath": "./performance_snapshots/",
    "MaxOptimizationSteps": 10,
    "ValidationTimeoutSeconds": 300,
    "PerformanceMeasurementRuns": 3,
    "SQL2016Compatible": true,
    "EnableDetailedLogging": true,
    "BufferClearBetweenRuns": false,
    "Constraints": {
      "ForbiddenActions": [
        "CreateIndex",
        "DropIndex",
        "CreateCTE",
        "AddPartitioning",
        "CreateView",
        "AlterTableStructure"
      ],
      "AllowedActions": [
        "UpdateStatistics",
        "RemoveUnnecessaryDistinct",
        "ConvertSubqueryToJoin",
        "FixImplicitConversion",
        "OptimizeStringConcatenation",
        "PrecomputeCalculatedColumns",
        "RemoveUnnecessarySort",
        "OptimizeStringOperations"
      ],
      "ForbiddenSqlPatterns": [
        "CREATE INDEX",
        "DROP INDEX",
        "WITH.*AS.*\\(",
        "PARTITION BY",
        "ALTER TABLE.*ADD",
        "ALTER TABLE.*DROP"
      ],
      "ForbiddenViewPatterns": [
        "WITH.*AS.*\\(",
        "CREATE.*VIEW",
        "UNION ALL",
        "CROSS APPLY",
        "OUTER APPLY"
      ],
      "MinimumImprovementPercentage": 5.0,
      "MaxExecutionTimeMs": 30000,
      "MaxViewDefinitionLength": 50000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DbPerformanceMcpServer": "Debug"
    }
  }
}